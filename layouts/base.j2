<!DOCTYPE html>
<html lang="en">
  <head>
{% block starthead %}{% endblock starthead %}
    <meta charset="utf-8">

{% block seometadata %}
    <title>{% block title %}{{ page.meta.title }} | {{ meta.title }}{% endblock %}</title>
    <meta name="description" content="{{ page.meta.description }}">
    <meta name="author" content="{{ page.meta.author }}">
{% endblock seometadata %}

    <link rel="shortcut icon" href="{{ media_url('/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ media_url('/apple-touch-icon.png') }}">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">

{% block googlefonts %}
    <link href='http://fonts.googleapis.com/css?family=Wire+One|Anonymous+Pro' rel='stylesheet' type='text/css'>
{% endblock googlefonts %}

{% block headcss %}
    <link href="{{ media_url('css/bootstrap.css') }}" rel="stylesheet">
    <link href="{{ media_url('css/style.css') }}" rel="stylesheet" type="text/css" media="all">
    <link href="{{ media_url('css/colinta.css') }}" rel="stylesheet" type="text/css" media="all">

    <link href="{{ media_url('google-code-prettify/prettify.css') }}" rel="stylesheet" type="text/css" media="all">
{% endblock headcss %}

{% block headjs %}
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.js"></script>
    <script src="{{ media_url('js/libs/modernizr.js') }}"></script>
    <script src="{{ media_url('google-code-prettify/prettify.js') }}"></script>
{% endblock headjs %}

{% block endhead %}{% endblock endhead %}
  </head>

  <body onload="prettyPrint()">

    <div class="topbar">
      <div class="fill">
        <div class="container">
{% block header -%}
          <img class="minime" src="/image/minime.png" />
          <a class="brand" href="/">{{ meta.title }}</a>
{%- endblock %}
          <ul class="nav">
{% block nav -%}
            {% from "macros.j2" import render_nav with context %}
            {{ render_nav(menu, 'main_nav') }}
{%- endblock %}
          </ul>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="content">
{% block main -%}
{%- endblock main %}
      </div>

      <footer>
        <p>&copy; {{ meta.author.name }} {{ meta.time }}</p>
        <p>Powered by <a href="http://ringce.com/hyde">hyde</a>.</p>
      </footer>

    </div> <!-- /container -->
{% block js %}

{% block prettyprint -%}
<script type="text/javascript">
$(document).ready(prettyPrint);
</script>
{% endblock prettyprint %}

{% block analytics -%}
  {% include "analytics.j2" %}
{%- endblock analytics %}

{% endblock js %}
  </body>
</html>
